
@{
    ViewData["Title"] = "Добавлени поста";
    @model WebApplication2.Models.PostModel;
}

<h2>Добавление поста</h2>

    <form class="gtid-addpost" asp-antiforgery="true" method="post">

        <div class="profil-bg">
            <h3 style="margin-bottom:0;margin-top: 0;">Заголовок: </h3>
            <textarea class="c-textarea c-comment-form__text js-commenttext goog-textarea" asp-for="Headline" name="Headline"
                      placeholder="Написать" data-slot="comment-form.text"
                      style="overflow: auto hidden;box-sizing: border-box;padding-bottom: 5px; height: 50px;"></textarea>
        </div>

        <div class="profil-bg">
            <h3 style="margin-bottom:0;margin-top: 0;">Текст поста: </h3>
            <textarea class="c-textarea c-comment-form__text js-commenttext goog-textarea" name="MainText" asp-for="MainText"
                      placeholder="Написать" data-slot="comment-form.text"
                      style="overflow: auto hidden;box-sizing: border-box;padding-bottom: 5px; height: 200px;"></textarea>
        </div>

        <div class="profil-bg">
            <div class="btn-danger btn" style="position: absolute;background:green;border-color:darkgreen;left: 91%;">
                <a style="text-decoration:none;color:white;" href="/users/addpost">
                    <button type="submit">Добавить</button>
                </a>
            </div>
        </div>
    </form>
